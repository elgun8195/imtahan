@model IEnumerable<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminF/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<div class="container">
    <div class="row">
        <table class="table">
            <a class="btn btn-success" asp-controller="team" asp-action="create">create</a>
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Name</th>
                    <th scope="col">Position</th>
                    <th scope="col">Desc</th>
                    <th scope="col">Insta</th>
                    <th scope="col">facebook</th>
                    <th scope="col">Twitter</th>
                    <th scope="col">Linkedin</th>
                    <th>Settings</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td><img src="~/images/@item.Image" /></td>
                        <td>@item.Name</td>
                        <td>@item.Position</td>
                        <td>@item.Desc</td>
                        <td>@item.Instargarm</td>
                        <td>@item.Facebook</td>
                        <td>@item.Twitter</td>
                        <td>@item.Linkedin</td>
                        <td>
                            <a  class="btn btn-primary" asp-controller="team" asp-action="update" asp-route-id="@item.Id">Update</a>
                            <a  class="btn btn-danger" asp-controller="team" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                            <a   class="btn btn-success" asp-controller="team"  asp-action="detail" asp-route-id="@item.Id">Detail</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
