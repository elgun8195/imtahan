@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <form class="pt-3" method="post">
            <div class="form-group">
                <input asp-for="UserName" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
            </div>

            <div class="form-group">
                <input asp-for="FullName" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="FullName">
            </div>

            <div class="form-group">
                <input asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
            </div>


            <div class="form-group">
                <input asp-for="CheckPassword" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="CheckPassword">
            </div>


            <div class="mt-3">
                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-controller="account" asp-action="register">SIGN UP</button>
            </div>


            <div class="mb-2">
                <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                    <i class="mdi mdi-facebook me-2"></i>Connect using facebook
                </button>
            </div>
            <div class="text-center mt-4 font-weight-light">
                Have an account? <a class="text-primary" asp-controller="account" asp-action="Login">Login</a>
            </div>
        </form>
    </div>
</div>