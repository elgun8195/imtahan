@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">

        <form class="pt-3" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <input asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
            </div>

            <div class="form-group">
                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
            </div>


            <div class="form-group">
                <input asp-for="RememberMe" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="RememberMe">
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" asp-controller="account" asp-action="login">Log IN</button>
            </div>

            <div class="mb-2">
                <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                    <i class="mdi mdi-facebook me-2"></i>Connect using facebook
                </button>
            </div>
            <div class="text-center mt-4 font-weight-light">
                Do not have an account? <a class="text-primary" asp-controller="account" asp-action="register">Register</a>
            </div>
        </form>


    </div>
</div>